<% if(messages.length > 0) { %> 
    <% for (const message of messages) {%>
        <div class="message d-flex flex-column">
            <div class="info d-flex">
                <p class="date text-light pe-1"><%=message.date%></p>
                <p class="email text-light ps-1"><%=message.mail%></p>
            </div>
            <p class="text text-light"><%=message.text%></p>
        </div>
    <% } %>  
<% }%> 